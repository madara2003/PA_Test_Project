<component name="HomeScreen" extends = "Group">
    <script type="text/brightscript" uri="HomeScreen.brs" />  
 
    <interface>
       <field id="setFocusSecondScreen" type="bool" onChange ="setFocusSecondScreen" alwaysNotify = "true" />
    </interface> 
     <children>
        <Poster id = "backgroundPoster" blendColor= "#808080"  width = "1280" height="720" />

        <Label id="infoAboutTesting" translation ="[40, 100]" color = "#FFFFFF" height = "100" wrap="true" horizAlign = "left" lineSpacing = "10.0" width = "600" vertAlign = "center" />
        
        <Label id="genre" text="Genre: motoring | 0 year" translation ="[40, 190]" color="#FFFFFF" opacity="0.7"  />

        <Label id = "descriptionOfCars" color="#FFFFFF" width="600" wrap="true" height="100" lineSpacing="7.0" translation="[40, 230]" />
    
        <RowList id = "RListOfCars" showRowLabel="[true]"   focusBitmapBlendColor="#000080" itemComponentName ="HomeCarRowListCell" vertFocusAnimationStyle = "floatingFocus" rowFocusAnimationStyle = "floatingFocus"   numRows = "4"  />
       
        <SecondScreen id="secondScreen" visible = "false" />
           
         <Animation   id="blendAnimation"  duration="1.0"  repeat="false"   easeFunction="linear" >
           <FloatFieldInterpolator  id = "testOpacity" key="[0.0, 0.5, 1.0]"    keyValue="[ 1.0, 0.5, 1.0]"       fieldToInterp="backgroundPoster.opacity"   />
        </Animation>     
     </children>
</component>
 